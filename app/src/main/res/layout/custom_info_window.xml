<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iconInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="aaaa"
                android:src="@android:drawable/ic_dialog_alert" />

            <TextView
                android:id="@+id/winTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iconInfo"
                android:text="Hello"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/winTitle"
                android:layout_toRightOf="@id/iconInfo"
                android:text="magnitude" />
            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/magnitude"
                android:layout_toRightOf="@id/magnitude"
                android:layout_marginLeft="6dp"
                android:textColor="@color/colorAccent"
                android:background="@android:color/transparent"
                android:text="More info..." />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>